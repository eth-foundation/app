<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "org.fdbb.app.Cabinet"
        version   = "1.0.3">
    <name>FDBB Cabinet</name>
    <description>First Decentralized Blockchain Bank</description>
    <author href="http://fdbb.org/" email="support@fdbb.com">FDBB LTD Â©</author>
    <preference name="permissions" value="none"/>
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1"/>
    <plugin name="cordova-plugin-vibration" spec="~2.1.3" />
    <plugin name="cordova-plugin-sim" source="npm"/>
    <plugin name="cordova-plugin-dialogs" source="npm"/>
    <plugin name="cordova-plugin-cszbar" source="npm"/>
    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />

    <!-- plugin name="onesignal-cordova-plugin" source="npm" / -->
    <preference name="android-build-tool" value="gradle" />

    
    <access origin="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="*"/>
    <icon src="img/logo-icone.png" />
    <preference name='phonegap-version' value='cli-6.0.0' />
    <platform name="android">
        <plugin name="cordova-plugin-whitelist"  />
        <allow-intent href="market:*" />
        <preference name="Orientation" value="portrait" />
        <plugin name="cordova-plugin-crosswalk-webview"  />
        <preference name="xwalkMode" value="default" />
    </platform>
</widget>